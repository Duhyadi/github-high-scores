<table>
  <tr>
    <th>Score</th>
    <th>Avatar</th>
    <th>User</th>
  </tr>

  {{#each scores}}
    <tr id="person-{{ this.username }}">
      <div itemscope itemtype="http://data-vocabulary.org/Person">
        <td>{{ this.score }}</td>
        <td>
          <img itemprop="photo" src="{{ this.avatar }}" width="50" height="50">
        </td>
        <td>
          <span itemprop="nickname"><a href="/{{ this.username }}">{{ this.username }}</a></span>
        </td>
        <td>
          <a class="permalink" href="#person-{{ this.username }}"></a>
        </td>
    </tr>
  {{/each}}

</table>
